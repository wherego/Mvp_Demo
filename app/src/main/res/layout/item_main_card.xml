<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="440px"
                                    android:orientation="vertical"
                                    android:id="@+id/cd_unit"
                                    app:cardBackgroundColor="@android:color/white"
                                    app:cardCornerRadius="10px"
                                    app:cardPreventCornerOverlap="true"
                                    app:cardUseCompatPadding="true"
                                    app:contentPaddingBottom="60px"
                                    app:contentPaddingLeft="80px"
                                    app:contentPaddingTop="60px"
                                    android:paddingRight="80px"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50px"
            android:text="第一课"
            android:textColor="@android:color/black"
            android:textSize="36px"
            android:id="@+id/tv_chapter"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:gravity="center_vertical"
            android:layout_centerVertical="true"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="90px"
                android:text="编程技巧"
                android:layout_centerVertical="true"
                android:textColor="@android:color/black"
                android:textSize="64px"/>

            <ImageView
                android:id="@+id/iv_status"
                android:layout_width="180px"
                android:layout_height="108px"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_lock"
                />
        </RelativeLayout>

        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_start"
                android:layout_width="29.5px"
                android:layout_height="28px"
                android:src="@drawable/ic_star_border_lime_a700_18dp"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50px"
                android:textColor="#4A4A4A"
                android:textSize="36px"
                android:layout_marginLeft="13.5px"
                android:text="0"
                android:id="@+id/tv_rightNum"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="28px"
                android:textColor="#4A4A4A"
                android:textSize="20px"
                android:layout_gravity="bottom"
                android:text="/75"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="42px"
                android:textColor="#4D4D4D"
                android:textSize="30px"
                android:text="总耗时："
                android:layout_marginLeft="50px"
                />
            <TextView
                android:layout_marginLeft="10px"
                android:layout_width="wrap_content"
                android:layout_height="42px"
                android:textColor="#4D4D4D"
                android:textSize="30px"
                android:text="0"
                android:id="@+id/tv_total"/>

        </LinearLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>